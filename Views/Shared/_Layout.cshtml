        <script src="~/lib/iziToast-master/iziToast-master/dist/js/iziToast.min.js" type="text/javascript"></script>

    </head> 
    <body class="d-flex flex-column min-vh-100">

        <header id="header" class="absolute-top">
        <div class="container d-flex align-items-center justify-content-between">
            <h1 class="logo"><a class="navbar-brand" asp-controller="Home" asp-action="Index"><i class="bi bi-hospital"></i> &nbsp;Medicore</a></h1>

            <nav id="navbar" class="navbar">
            <ul class="nav">
                @if (Context.Session.GetString("Username") == null)
                {          
                    <li><a class="btn btn-light text-dark" asp-controller="Home" asp-action="Index" id="login" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="bi bi-box-arrow-in-right"></i> Log In</a></li>
                    <li><a class="btn btn-outline-light text-white" asp-controller="User" asp-action="CreateUser"  id="signup"><i class="bi bi-person-plus"></i> Sign Up</a></li>
                }else{
                        @if (Context.Session.GetString("UserType") == "Patient")
                        {
                            <li><a class="btn btn-light text-dark d-none d-xl-block" asp-controller="Home" asp-action="PatientProfile" id="login"><i class="bi bi-file-text-fill"></i> View Profile</a></li>

                        }
                        else
                        {
                            <li><a class="btn btn-light text-dark d-none d-xl-block" asp-controller="Home" asp-action="EmployeeProfile" id="login"><i class="bi bi-file-text-fill"></i> View Profile</a></li>
                        }
                        <li><a class="btn btn-outline-light text-white d-none d-xl-block" asp-controller="User" asp-action="Logout" id="signup"><i class="bi bi-door-open-fill"></i> Log Out</a></li>
                    <li>
                        <div class="dropdown">
                            <a class="dropdown-toggle d-flex align-items-center hidden-arrow"
                            href="#"
                            id="navbarDropdownMenuAvatar"
                            role="button"
                            data-mdb-toggle="dropdown"
                            aria-expanded="false">
                                <img src='~/images/@Context.Session.GetString("ProfilePicture")'
                                    class="rounded-circle"
                                    height="40"
                                    alt="Portrait"
                                    loading="lazy" />
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end mt-3"
                            aria-labelledby="navbarDropdownMenuAvatar">
                                <li>
                                    @if(Context.Session.GetString("UserType") == "Patient"){
                                        <a class="dropdown-item" asp-controller="Home" asp-action="PatientProfile"><i class="bi bi-person"></i> &nbsp;My Profile</a>
                                    }else{
                                        <a class="dropdown-item" asp-controller="Home" asp-action="EmployeeProfile"><i class="bi bi-person"></i> &nbsp;My Profile</a>
                                    }
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#"><i class="bi bi-sliders"></i> &nbsp;Settings</a>
                                </li>
                                <li>
                                        <a class="dropdown-item" asp-controller="User" asp-action="Logout"><i class="bi bi-door-open"></i> &nbsp;Logout</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                }

            </ul>
            
            </nav>

        </div>
        </header>




        </section>
        
        <div class="">
            <main role="main" class="">
                @RenderBody()
                
            </main>
        </div>

