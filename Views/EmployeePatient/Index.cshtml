@using System.Data
@model System.Data.DataTable
@{
    ViewData["Title"] = "User Profile";
}
<section style="background-color: #f9f9f8;">
    <div class="container py-4">
        <div class="row">
            <div class="col">
                <div class="card my-4">
                    <div class="card-body">
                        <div class="card-title d-flex">
                            <h3>Patients</h3>
                            <div class="control-group ms-auto  d-none d-sm-block">
                                @if(@Context.Request.Query["select"] == "Checks"){
                                    <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="All">All</a>
                                    <a type="button" class="btn btn-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Checks">Checks</a>
                                    <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Surgeries">Surgeries</a>
                                    <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Tests">Tests</a>
                                }else if(@Context.Request.Query["select"] == "Surgeries"){
                                    <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="All">All</a>
                                    <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Checks">Checks</a>
                                    <a type="button" class="btn btn-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Surgeries">Surgeries</a>
                                    <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Tests">Tests</a>
                                }else if(@Context.Request.Query["select"] == "Tests"){
                                    <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="All">All</a>
                                    <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Checks">Checks</a>
                                    <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Surgeries">Surgeries</a>
                                    <a type="button" class="btn btn-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Tests">Tests</a>
                                }else{
                                    <a type="button" class="btn btn-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="All">All</a>
                                    <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Checks">Checks</a>
                                    <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Surgeries">Surgeries</a>
                                    <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Tests">Tests</a>
                                }

                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            @foreach (DataRow Patient in Model.Rows){
                                <div class="col-lg-6 col-xxl-6 mt-2 mb-4">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center">
                                                <img src='~/images/@Patient["Profile_Pic"]' alt="" style="width: 45px; height: 45px" class="rounded-circle"/>
                                                 <div class="ms-3">
                                                <p class="fw-bold mb-1">@Patient["First_Name"] @Patient["Middle_Name"]</p>
                                                Last Seen : <span class="text-muted mb-0">@Patient["Date"]</span>
                                            </div>
                                        </div>
                                        <span class="badge  badge-primary"> 
                                            @Patient["Service_Type_Name"]
                                        </span>
                                        </div>
                                    </div>
                                    <div class="card-footer border-0 bg-light p-2 d-flex justify-content-around">
                                        <a  class="btn btn-link m-0 text-reset" role="button" data-ripple-color="dark" asp-controller="Home" asp-action="PatientProfile" asp-route-PatientUsername='@Patient["Patient_Username"]'><i class="bi bi-chat-right-text"></i> &nbsp; View Profile</a>
                                    </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>