@using System.Data
@model System.Data.DataTable
@{
    ViewData["Title"] = "User Profile";
}
<section style="background-color: #f9f9f8;">
    <div class="container py-4">
        <div class="row">
            <div class="col">
                <div class="card my-4">
                    <div class="card-body">
                        <div class="card-title d-flex">
                            <h3>Surgeries</h3>
                            <div class="control-group ms-auto  d-none d-sm-block">
                                @if(Context.Request.Query["PatientUsername"].ToString() != null && Context.Request.Query["PatientUsername"] != "" && Context.Session.GetString("UserType") == "Employee"){
                                    @if(@Context.Request.Query["select"] == "Upcoming"){
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="All" asp-route-PatientUsername='@Context.Request.Query["PatientUsername"]'>All</a>
                                        <a type="button" class="btn btn-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Upcoming" asp-route-PatientUsername='@Context.Request.Query["PatientUsername"]'>Upcoming</a>
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Completed" asp-route-PatientUsername='@Context.Request.Query["PatientUsername"]'>Completed</a>
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Cancelled" asp-route-PatientUsername='@Context.Request.Query["PatientUsername"]'>Cancelled</a>
                                    }else if(@Context.Request.Query["select"] == "Completed"){
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="All" asp-route-PatientUsername='@Context.Request.Query["PatientUsername"]'>All</a>
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Upcoming" asp-route-PatientUsername='@Context.Request.Query["PatientUsername"]'>Upcoming</a>
                                        <a type="button" class="btn btn-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Completed" asp-route-PatientUsername='@Context.Request.Query["PatientUsername"]'>Completed</a>
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Cancelled" asp-route-PatientUsername='@Context.Request.Query["PatientUsername"]'>Cancelled</a>
                                    }else if(@Context.Request.Query["select"] == "Cancelled"){
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="All" asp-route-PatientUsername='@Context.Request.Query["PatientUsername"]'>All</a>
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Upcoming" asp-route-PatientUsername='@Context.Request.Query["PatientUsername"]'>Upcoming</a>
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Completed" asp-route-PatientUsername='@Context.Request.Query["PatientUsername"]'>Completed</a>
                                        <a type="button" class="btn btn-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Cancelled" asp-route-PatientUsername='@Context.Request.Query["PatientUsername"]'>Cancelled</a>
                                    }else{
                                        <a type="button" class="btn btn-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="All" asp-route-PatientUsername='@Context.Request.Query["PatientUsername"]'>All</a>
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Upcoming" asp-route-PatientUsername='@Context.Request.Query["PatientUsername"]'>Upcoming</a>
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Completed" asp-route-PatientUsername='@Context.Request.Query["PatientUsername"]'>Completed</a>
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Cancelled" asp-route-PatientUsername='@Context.Request.Query["PatientUsername"]'>Cancelled</a>
                                    }
                                }else{
                                    @if(@Context.Request.Query["select"] == "Upcoming"){
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="All">All</a>
                                        <a type="button" class="btn btn-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Upcoming">Upcoming</a>
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Completed">Completed</a>
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Cancelled">Cancelled</a>
                                    }else if(@Context.Request.Query["select"] == "Completed"){
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="All">All</a>
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Upcoming">Upcoming</a>
                                        <a type="button" class="btn btn-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Completed">Completed</a>
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Cancelled">Cancelled</a>
                                    }else if(@Context.Request.Query["select"] == "Cancelled"){
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="All">All</a>
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Upcoming">Upcoming</a>
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Completed">Completed</a>
                                        <a type="button" class="btn btn-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Cancelled">Cancelled</a>
                                    }else{
                                        <a type="button" class="btn btn-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="All">All</a>
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Upcoming">Upcoming</a>
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Completed">Completed</a>
                                        <a type="button" class="btn btn-outline-primary m-1" data-mdb-ripple-color="dark" asp-action="Index" asp-route-select="Cancelled">Cancelled</a>
                                    }
                                }
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            @foreach (DataRow Surgery in Model.Rows){
                                <div class="col-lg-6 mt-2 mb-4">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center">
                                                @if(Context.Session.GetString("UserType") == "Patient"){
                                                    <img src='~/images/@Surgery["Profile_Pic1"]' alt="" style="width: 45px; height: 45px" class="rounded-circle"/>
                                                }else{
                                                    <img src='~/images/@Surgery["Profile_Pic"]' alt="" style="width: 45px; height: 45px" class="rounded-circle"/>
                                                }                                                <div class="ms-3">
                                                <p class="fw-bold mb-1">@Surgery["Type_Name"]</p>
                                                <p class="mb-0">
                                                    <span>Patient : </span> <span class="text-muted ">@Surgery["Patient_Username"]</span>
                                                </p>
                                                <p class="mb-0">
                                                    @if(string.IsNullOrWhiteSpace(@Surgery["Room_Number"].ToString())){
                                                        <span>Room : </span> <span class="text-muted ">Unspecified</span>
                                                    }else{
                                                        <span>Room : </span> <span class="text-muted ">@Surgery["Room_Prefix"] @Surgery["Room_Number"]</span>
                                                    }
                                                    <span class="ms-3">Time : </span> <span class="text-muted ">@Surgery["Surgery_Date"]</span>
                                                </p>
                                                </div>
                                            </div>
                                                @if(Convert.ToBoolean(@Surgery["Surgery_Is_Rejected"]) == false && Convert.ToBoolean(@Surgery["Surgery_Is_Confirmed"]) == false){
                                                    <span class="badge badge-warning">Awaiting Confirmation</span>
                                                }else if(Convert.ToBoolean(@Surgery["Surgery_Is_Rejected"]) == true){
                                                    <span class="badge badge-danger">Cancelled</span>
                                                }else if(Convert.ToDateTime(@Surgery["Surgery_Date"]) > DateTime.Now){
                                                    <span class="badge badge-success">Upcoming</span>
                                                }else if(Convert.ToDateTime(@Surgery["Surgery_Date"]) < DateTime.Now){
                                                    <span class="badge badge-primary">Completed</span>
                                                }
                                            </div>
                                        </div>
                                        <div class="card-footer border-0 bg-light p-2 d-flex justify-content-around">
                                                @if (Context.Session.GetString("UserType") == "Patient")
                                                {
                                                    <a  class="btn btn-link m-0 text-reset disabled" role="button" data-ripple-color="dark" asp-controller="Home" asp-action="PatientProfile" asp-route-PatientUsername='@Surgery["Patient_Username"]'><i class="bi bi-chat-right-text"></i> &nbsp; View Profile</a>

                                                }else{
                                                    <a  class="btn btn-link m-0 text-reset" role="button" data-ripple-color="dark" asp-controller="Home" asp-action="PatientProfile" asp-route-PatientUsername='@Surgery["Patient_Username"]'><i class="bi bi-chat-right-text"></i> &nbsp; View Profile</a>
                                                }
                                        </div>
                                    </div>
                                </div>
                            }                            
                                                      
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>