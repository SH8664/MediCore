@model HospitalAppl.Models.Job
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Rooms";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-4 p-5">
                <div class="card-body">
                    <div class="row">
                    <div class="col-6">
                        <h2 class="mb-0 align-middle">Edit Profession</h2>
                    </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-sm-12">
                            
                            <form class="row row-cols-lg-auto g-3 align-items-center" method="post" asp-action="EditJob">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" class="form-control" id="inlineFormInputGroupUsername" value='@Context.Request.Query["jobName"]' name="PrevName" required/>

                                <div class="col-12">
                                    <label class="visually-hidden" for="inlineFormInputGroupUsername">Username</label>
                                    <div class="input-group">
                                    <div class="input-group-text"><i class="bi bi-briefcase"></i> </div>
                                    <input type="text" class="form-control" id="inlineFormInputGroupUsername" asp-for="Job_Name" asp-validation-for="Job_Name" placeholder="Job Name" required/>
                                    </div>
                                </div>

                                <div class="col-6">
                                    <button type="submit" class="btn btn-primary">Submit <i class="bi bi-caret-right-fill"></i></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>