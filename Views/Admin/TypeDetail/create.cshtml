@model HospitalAppl.Models.TypeDetail
@{
    // Configurations
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Type Details";
}

<div class="container bg-white p-5">
    <h2>Create Type Detail</h2>
    
    
    <form asp-action="Create" method="POST">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row py-3">
             <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Service_Type_Name" class="form-label">Service Type Name </label>
                    <select name="Service_Type_Name" class="form-select" asp-for="Service_Type_Name">
                        @foreach (var Serv in ViewBag.ServiceTypes)
                        {
                                <option value="@Serv["Service_Type_Name"]">@Serv["Service_Type_Name"]</option>
                        }
                    </select>
                   
                </div>
                <div class="mb-3">
                    <label asp-for="Type_Cost" class="form-label">Type Cost </label>
                    <input type="text" name="Type_Cost" class="form-control" asp-for="Type_Cost">
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Type_Name" class="form-label">Type Name </label>
                    <input type="text" name="Type_Name" class="form-control" asp-for="Type_Name">
                </div>
            </div>
        </div>
        <div class="col-12 text-center">
            <button type="submit" class="btn btn-medi">Create</button>
        </div>
    </form>
</div>
